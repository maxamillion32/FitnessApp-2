<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_food_sub"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white" >

    <RelativeLayout
        android:id="@+id/item_food_sub_data"
        android:layout_width="fill_parent"
        android:layout_height="216px" >

        <ImageView
            android:id="@+id/img_food_sub_item_image"
            android:layout_width="200px"
            android:layout_height="180px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18px"
            android:src="@drawable/food_sample" />

        <RelativeLayout
            android:layout_width="200px"
            android:layout_height="180px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18px" >

            <LinearLayout
                android:id="@+id/LinearLayout01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@drawable/common_separate"
                android:orientation="vertical" >

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/common_separate"
                android:orientation="vertical" >

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout03"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/common_separator"
                android:orientation="vertical" >

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout04"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/common_separator"
                android:orientation="vertical" >

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="115px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="38px"
            android:layout_toRightOf="@id/img_food_sub_item_image" >

            <TextView
                android:id="@+id/txt_food_sub_item_title"
                android:layout_width="wrap_content"
                android:layout_height="40px"
                android:text="雞蛋"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/common_note_text"
                android:textSize="36px" />

            <TextView
                android:id="@+id/txt_food_sub_calory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="144"
                android:textColor="#FF0000"
                android:textSize="36px" />

            <TextView
                android:id="@+id/txt_food_sub_mass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/txt_food_sub_calory"
                android:text="大卡/100克"
                android:textColor="@color/common_note_text"
                android:textSize="36px" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/common_separate"
            android:orientation="vertical" >

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>