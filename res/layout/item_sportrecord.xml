<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_sportrecord"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="105px" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="38px" >

            <TextView
                android:id="@+id/lbl_item_sportrecord_name"
                android:layout_width="wrap_content"
                android:layout_height="40px"
                android:text="Swim"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#878787"
                android:textSize="30px" />

            <TextView
                android:id="@+id/lbl_item_sportrecord_calory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_item_sportrecord_name"
                android:layout_marginTop="5px"
                android:text="182 kcal | 1633kg"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#878787"
                android:textSize="24px" />
        </RelativeLayout>

        <ImageView android:id="@+id/ImageView1"
            android:layout_width="26px"
            android:layout_height="45px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="38px"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/common_next" />

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/common_separate"
            android:orientation="vertical" >

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>