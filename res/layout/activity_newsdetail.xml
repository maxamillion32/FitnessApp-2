<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_newsdetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_background"
    tools:context=".ShengLiZiLiaoActivity" >

    <RelativeLayout
        android:id="@+id/rl_newsdetail_header"
        android:layout_width="fill_parent"
        android:layout_height="95px"
        android:background="@color/common_titlebar_back5" >

        <ImageButton
            android:id="@+id/img_newsdetail_back"
            android:layout_width="55px"
            android:layout_height="55px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_back" />

        <TextView
            android:id="@+id/lblTitle"
            android:layout_width="400px"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/activity_healthvideolist_title1"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_fnt_size" />

    </RelativeLayout>

 <RelativeLayout
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:layout_below="@id/rl_newsdetail_header"
     android:layout_marginBottom="24px"
     android:layout_marginLeft="24px"
     android:layout_marginRight="24px"
     android:layout_marginTop="24px"
     android:background="@color/color_white" >

                <TextView
                    android:id="@+id/txt_newsdetail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="78px"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30px"
                    android:background="@color/color_white"
                    android:text="TextView"
                    android:textColor="@color/common_note_text"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/txt_newsdetail_date"
                    android:layout_width="fill_parent"
                    android:layout_height="50px"
                    android:layout_marginLeft="500px"
                    android:layout_marginTop="78px"
                    android:background="@color/color_white"
                    android:text="TextView"
                    android:textColor="@color/common_note_text"
                    android:textSize="24px" />

                <WebView
                    android:id="@+id/webView_newsdetail"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="24px"
                    android:layout_marginLeft="24px"
                    android:layout_marginRight="24px"
                    android:layout_marginTop="140px"
                    android:background="@color/color_white" />

            </RelativeLayout>
    

</RelativeLayout>